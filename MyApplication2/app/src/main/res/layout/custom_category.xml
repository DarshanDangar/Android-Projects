<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5ssp"
    app:cardElevation="@dimen/_3ssp"
    android:layout_marginHorizontal="@dimen/_3ssp"
    android:layout_marginVertical="@dimen/_5ssp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>



    <TextView
        android:id="@+id/custom_category_name"
        style="@style/bold_16_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10ssp"
        android:gravity="center" />

    <ImageView
        android:layout_marginTop="@dimen/_40ssp"
        android:id="@+id/custom_category_images"
        android:layout_width="match_parent"
        android:layout_height="100dp" />


</androidx.cardview.widget.CardView>