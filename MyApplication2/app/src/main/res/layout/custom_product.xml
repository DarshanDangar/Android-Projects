<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_100ssp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5ssp"
    app:cardElevation="@dimen/_3ssp"
    android:layout_marginVertical="@dimen/_5ssp"
    android:layout_marginHorizontal="@dimen/_5ssp">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_gravity="center"
            android:id="@+id/custom_product_image"
            android:layout_width="@dimen/_80ssp"
            android:layout_height="@dimen/_80ssp" />

        <TextView
            android:id="@+id/custom_product_name"
            style="@style/bold_14_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/custom_product_price"
            style="@style/bold_12_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>





</androidx.cardview.widget.CardView>